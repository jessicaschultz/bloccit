<div class="row">
  <div class="col-md-4">
    <h1>Sign up confirmation</h1>
    <h3>Is the information below correct?</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h5>Email: <%= @user.email%></h5>
    <h5>Name: <%= @user.name%></h5>
  </div>
</div>

<div class="row">
  <div class="col-md-4", style"width= auto;">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-4", style"width= auto;">
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-danger', :method => :get %>
  </div>
</div>
